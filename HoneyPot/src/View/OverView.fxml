<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.VBox?>
<?import com.jfoenix.controls.JFXToolbar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.Region?>
<AnchorPane fx:id="anchor" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.OverviewController">
    <children>
        <HBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0">
            <children>
                <AnchorPane fx:id="menuPane" prefHeight="${menuPane.parent.height}"
                            prefWidth="260.0"
                            style="-fx-background-color: achmea;">
                    <children>
                        <VBox AnchorPane.leftAnchor="0" alignment="CENTER" AnchorPane.topAnchor="100"
                              AnchorPane.rightAnchor="0">
                            <children>
                                <JFXButton fx:id="overviewBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0"
                                           layoutX="0"
                                           layoutY="0" mnemonicParsing="false" prefHeight="50.0"
                                           prefWidth="240.0"
                                           style="-fx-background-color: achmea; -fx-font-family: Roboto-Thin; -fx-font-size: 16;"
                                           text="%overview" textFill="WHITE">
                                    <graphic>
                                        <FontAwesomeIconView fill="WHITE" glyphName="HOME" size="22"
                                                             strokeType="OUTSIDE"
                                                             strokeWidth="0.0"/>
                                    </graphic>
                                </JFXButton>
                                <JFXButton fx:id="servicesBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0"
                                           layoutX="0"
                                           layoutY="50.0" mnemonicParsing="false" prefHeight="50.0"
                                           prefWidth="240.0"
                                           style="-fx-background-color: achmea; -fx-font-family: Roboto-Thin; -fx-font-size: 16;"
                                           text="%services" textFill="WHITE">
                                    <graphic>
                                        <FontAwesomeIconView fill="WHITE" glyphName="SERVER" size="22"
                                                             strokeType="OUTSIDE"
                                                             strokeWidth="0.0"/>
                                    </graphic>
                                </JFXButton>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
                <VBox fx:id="VB" prefHeight="${VB.parent.height}" HBox.hgrow="ALWAYS">
                    <children>
                        <JFXToolbar fx:id="toolbar" prefWidth="${toolbar.parent.width}"
                                    prefHeight="25" style="-fx-background-color: WHITE">
                        </JFXToolbar>
                        <AnchorPane fx:id="mainPane" prefWidth="${mainPane.parent.width}"
                                    VBox.vgrow="ALWAYS"
                                    style="-fx-background-color: WHITE;">
                            <children>
                                <VBox alignment="CENTER_LEFT" AnchorPane.bottomAnchor="100" AnchorPane.leftAnchor="175"
                                      AnchorPane.rightAnchor="175" AnchorPane.topAnchor="25" spacing="15">
                                    <children>
                                        <Label style=" -fx-font-family: Roboto-Thin; -fx-font-size: 28; -fx-text-fill: #424242"
                                               text="%overview2"></Label>
                                        <Region prefHeight="25"></Region>
                                        <Separator></Separator>
                                        <Region prefHeight="25"></Region>
                                        <HBox alignment="CENTER">
                                            <children>
                                                <Label style=" -fx-font-family: Roboto-Regular; -fx-font-size: 16; -fx-font-weight: BOLD"
                                                       text="Status:"></Label>
                                                <Region HBox.hgrow="ALWAYS"></Region>
                                                <Label fx:id="statusLbl"
                                                       style=" -fx-font-family: Roboto-Regular; -fx-font-size: 16; "
                                                       text="IDKYET"></Label>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER">
                                            <children>
                                                <Label style=" -fx-font-family: Roboto-Regular; -fx-font-size: 16; -fx-font-weight: BOLD"
                                                       text="Last threat:"></Label>
                                                <Region HBox.hgrow="ALWAYS"></Region>
                                                <Label fx:id="threatLbl"
                                                       style=" -fx-font-family: Roboto-Regular; -fx-font-size: 16; "
                                                       text="IDKYET"></Label>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER">
                                            <children>
                                                <Label style=" -fx-font-family: Roboto-Regular; -fx-font-size: 16; -fx-font-weight: BOLD"
                                                       text="Services on:"></Label>
                                                <Region HBox.hgrow="ALWAYS"></Region>
                                                <Label fx:id="servicesLbl"
                                                       style=" -fx-font-family: Roboto-Regular; -fx-font-size: 16; "
                                                       text="IDKYET"></Label>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER">
                                            <children>
                                                <Label style=" -fx-font-family: Roboto-Regular; -fx-font-size: 16; -fx-font-weight: BOLD"
                                                       text="Total connections:"></Label>
                                                <Region HBox.hgrow="ALWAYS"></Region>
                                                <Label fx:id="connectionsLbl"
                                                       style=" -fx-font-family: Roboto-Regular; -fx-font-size: 16; "
                                                       text="IDKYET"></Label>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
